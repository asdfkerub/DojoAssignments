<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MEssage Board</title>
    <link rel="stylesheet" type='text/css' href="./stylesheets/master.css">
  </head>
  <body>
    <h1>Message Board</h1>
    <hr>
    <form action='/add/message' method="POST">
      Name: <input type="text" name="name"><br>
      Message: <textarea name="message"></textarea>
      <input type="submit" value="Add Message">
    </form>
    <%for(i in messages){%>
      <fieldset>
        <p>Name: <%= messages[i].name %></p>
        <p>Message: <%= messages[i].text %></p>
        <%for(var k = 0; k < messages[i].comments.length;k++){%>
          <p>Name: <%= messages[i].comments[k].name %></p>
          <p>Comment: <%= messages[i].comments[k].text %></p>
        <%}%>
        <form action="/comment/<%= messages[i]._id %>" method="POST">
          Name:<input type="text" name="name"><br>
          Comment:<textarea name="text"></textarea><br>
          <input type="submit" value="Add Comment">
        </form>
      </fieldset>
    <%}%>
  </body>
</html>
